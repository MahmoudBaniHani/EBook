<%= form_with(model: @book) do |form| %>
  <div class="field form-group">
    <%= form.text_field :name , placeholder:"Name Book" ,class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= form.text_field :author , placeholder:"Author Name" ,class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= form.text_area :description , placeholder:"Description" ,class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= form.text_field :publish_year , placeholder:"Publish Year" ,class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= form.number_field :rating , placeholder:"Rating" ,class:"form-control" %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
