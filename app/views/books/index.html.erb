<p style="color: green"><%= notice %></p>
<br>
<table class="table">
  <thead class="thead-dark">
  <tr>
    <th>Name</th>
    <th>Author</th>
    <th>Description</th>
    <th>Publish Year</th>
    <th>Rating</th>
    <th colspan="3" style="text-align: center">Action</th>
  </tr>

  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.name %></td>
      <td><%= book.author %></td>
      <td><%= book.description %></td>
      <td><%= book.publish_year %></td>
      <td><%= book.rating %></td>
      <td><%= link_to 'show' ,book %></td>
      <td><%= link_to 'edit' ,edit_book_path(book) %></td>
<!--      <td><%#= link_to "delete",book, data: { "turbo-method": :delete }, class: "btn btn-danger ml-3" %></td>-->
      <td><%= button_to 'Destroy',book ,method: :delete ,class: "btn btn-danger ml-3" %> </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Book' ,new_book_path %>

